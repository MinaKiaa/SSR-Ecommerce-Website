include ../mixins/sub-menu.pug

.header
    .container
        .navbar 
            .logo 
                a(href="/")
                    img(src=settingGeneral.logo, alt="Logo", style="width: 125px;")

            nav
                ul
                    li 
                        a(href="/") Home
                    li(class="sub-menu") 
                        - const pathProduct = "/products"
                        a(href="/products") Products
                        if(categories) 
                            +sub-menu(categories, pathProduct)
                    if(user)
                        li 
                            a(href="/user/info") #{user.fullName}
                        li 
                            a(href="/user/logout") Logout
                    else 
                        li 
                            a(href="/user/login") Login
                        li 
                            a(href="/user/register") Register

            img(src="/image/cart2.png" style="width: 40px; height: 40px; margin-left: 10px" alt="Cart" onclick="location.href='/cart';")
            .cart-count
                span #{miniCart ? miniCart.totalQuantity : 0}



