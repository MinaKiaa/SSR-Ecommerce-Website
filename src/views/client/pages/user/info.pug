extends ../../layouts/default.pug 
include ../../mixins/box-head.pug

block main 
    .container.my-3
        .row
            .col-12 
                +box-head("Thông tin tài khoản")
        
        .row.justify-content-center
            .col-md-8
                .card.shadow-sm
                    .card-body
                        dl.row
                            dt.col-sm-4 Name
                            dd.col-sm-8 #{user.fullName}

                            dt.col-sm-4 Email
                            dd.col-sm-8 #{user.email}

                            dt.col-sm-4 Status
                            dd.col-sm-8 
                                if user.status === 'active'
                                    span.badge.bg-success Active
                                else 
                                    span.badge.bg-secondary Inactive

                            dt.col-sm-4 Created At
                            dd.col-sm-8 #{user.createdAt.toLocaleString('vi-VN')}

                            dt.col-sm-4 Updated At
                            dd.col-sm-8 #{user.updatedAt.toLocaleString('vi-VN')}

