extends ../../layouts/default.pug

include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
include ../../mixins/table-tree.pug

block main
  if (role.permissions.includes("products-category_view"))
    h1 Danh mục sản phẩm

    .card.mb-3
      .card-header Danh mục sản phẩm
      .card-body
        .row.mb-3
          .col-8 Lựa chọn chức năng
          if (role.permissions.includes("products-category_create"))
            .col-4.text-end
              a.btn.btn-outline-success(href=`${prefixAdmin}/products-category/create`) + Thêm mới

        table.table.table-hover.table-sm.table-bordered.text-center.align-middle(checkbox-multi)
              thead
                tr
                  th
                    input(type="checkbox" name="checkall")
                  th STT
                  th Hình ảnh
                  th Tiêu đề
                  th Vị trí
                  th Trạng thái
                  th Người tạo
                  th Người cập nhật
                  th Hành động
              tbody
                +table-tree(records)

    form#form-change-status(action="", method="POST", data-path=`${prefixAdmin}/products-category/change-status`)
    form#form-delete-item(action="", method="POST", data-path=`${prefixAdmin}/products-category/delete`)